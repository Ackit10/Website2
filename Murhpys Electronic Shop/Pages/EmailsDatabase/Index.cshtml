@page
@model Murhpys_Electronic_Shop.Pages.EmailsDatabase.IndexModel

@{
    ViewData["Title"] = "Index";
}


<dir class = "AdminPanel">
 <a class = "btn btn-warning" asp-page="/AdminField/Index">Back to panel</a> 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emails[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emails[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emails[0].Email)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Emails) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class = "btn btn-info" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class = "btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</dir>

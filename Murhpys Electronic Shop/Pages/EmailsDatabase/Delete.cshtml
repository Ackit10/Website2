@page
@model Murhpys_Electronic_Shop.Pages.EmailsDatabase.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<div class="AdminPanel">
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Emails</h4>
    <hr />
     <dl class="row">
        <dd class="col-sm-10">
             Full Name: @($"{Model.Emails.FirstName} {Model.Emails.LastName}")
        </dd>
        <dd class="col-sm-10">
            Email: @Html.DisplayFor(model => model.Emails.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Emails.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class = "btn btn-info" asp-page="./Index">Back to List</a>
    </form>
</div>
</div>

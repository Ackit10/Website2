@page
@model Murhpys_Electronic_Shop.Pages.DetailsModel
@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div id="AdminForm" class="card">
        <div class="col">
            <img style="width: 18rem;" src="@Model.Items.PhotoPath" class="card-img-top">
        </div>
        <div class="col">
            <h1>@Model.Items.Name</h1>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Items.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Items.Price) $
            </dd>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Items.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Items.Description)
                </dd>

                <dt class="col-sm-2">
                    @{
                        switch (Model.Items.Section)
                        {
                            case 0:
                                Html.Display("Computers and Laptops");
                                break;
                            case 1:
                                Html.Display("Phones and Tablets");
                                break;
                            case 2:
                                Html.Display("Computer parts");
                                break;
                            case 3:
                                Html.Display("Accesuars");
                                break;
                        }

                    }
                </dt>
                <dd class="col-sm-10">
                    @{
                        switch (Model.Items.Section)
                        {
                            case 0:
                                Html.Display("Computers and Laptops");
                                break;
                            case 1:
                                Html.Display("Phones and Tablets");
                                break;
                            case 2:
                                Html.Display("Computer parts");
                                break;
                            case 3:
                                Html.Display("Accesuars");
                                break;
                        }

                    }
                </dd>

            </dl>
        </div>
        <div>
            <a class="btn btn-info" asp-page="/Products">Back to List</a>
        </div>
    </div>
</div>
